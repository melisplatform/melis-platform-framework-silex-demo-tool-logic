{% extends "layout.html.twig" %}

{% block content %}
    <div class="content-cont">
        <div class="me-heading bg-white border-bottom">
            <div class="row">
                <div class="me-hl col-xs-12 col-md-9">
                    <h1 class="content-heading">{{ 'tr_meliscodeexamplesilex_tool_title'|trans }}</h1>
                    <p>{{ 'tr_meliscodeexamplesilex_tool_desc'|trans }}</p>
                </div>
                <div class="me-hr col-xs-12 col-sm-4 col-md-3">
                    <button data-toggle="modal" id="meliscodeexamplesilex_tool_new_album" class="btn btn-success">
                        <i class="fa fa-plus"></i> {{ 'tr_meliscodeexamplesilex_tool_new_album'|trans }}
                    </button>
                </div>
            </div>
        </div>
        <div class="tab-content innerAll spacing-x2">
            <div class="bottom">
                <p>{{ 'tr_meliscodeexamplesilex_tool_db_connection_desc'|trans }}</p>
                <table id="silexDemoToolAlbumTable"
                       class="table table-striped table-primary dt-responsive nowrap dataTable no-footer dtr-inline"
                       cellspacing="0" width="100%" style="width: 100%;" role="grid"
                       aria-describedby="silexDemoToolAlbumTable_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_desc" style="width: 94px;" tabindex="0" aria-controls="silexDemoToolAlbumTable"
                                rowspan="1" colspan="1" aria-sort="descending"
                                aria-label="IDactiver pour trier la colonne par ordre croissant">
                                {{ 'tr_meliscodeexamplesilex_album_id'|trans }}
                            </th>
                            <th class="sorting" style="width: 248px;" tabindex="0" aria-controls="silexDemoToolAlbumTable"
                                rowspan="1" colspan="1" aria-label="Nomactiver pour trier la colonne par ordre croissant">
                                {{ 'tr_meliscodeexamplesilex_album_title'|trans }}
                            </th>
                            <th class="sorting" style="width: 403px;" tabindex="0" aria-controls="silexDemoToolAlbumTable"
                                rowspan="1" colspan="1" aria-label="Dateactiver pour trier la colonne par ordre croissant">
                                {{ 'tr_meliscodeexamplesilex_album_songs'|trans }}
                            </th>
                            <th class="sorting" style="width: 403px;" tabindex="0" aria-controls="silexDemoToolAlbumTable"
                                rowspan="1" colspan="1"
                                aria-label="Chansonsactiver pour trier la colonne par ordre croissant">
                                {{ 'tr_meliscodeexamplesilex_album_date'|trans }}
                            </th>
                            <th class="dtActionCls sorting_disabled" style="width: 86px;" rowspan="1" colspan="1"
                                aria-label="Action">
                                {{ 'tr_meliscodeexamplesilex_action'|trans }}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <br>
                <p>{{ 'tr_meliscodeexamplesilex_tool_melis_services_desc'|trans }}</p>
                <pre>
$app->register(new MelisServiceProvider());
$langSvc = $app['melis.services']->getService("MelisEngineLang");
$langs = $langSvc->getAvailableLanguages();
                </pre>
                <table class="table table-striped table-primary dt-responsive nowrap no-footer dtr-inline"
                       cellspacing="0" width="100%" role="grid" style="width: 100%;">
                    <thead>
                    <tr role="row">
                        <th class="sorting" style="width: 98px;">{{ 'tr_meliscodeexamplesilex_lang_id'|trans }}</th>
                        <th class="sorting" style="width: 98px;">{{ 'tr_meliscodeexamplesilex_lang_locale'|trans }}</th>
                        <th class="sorting" style="width: 98px;">{{ 'tr_meliscodeexamplesilex_lang_name'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for lang in langs %}
                        <tr id="18" role="row" class="odd">
                            <td style="">{{ lang.lang_cms_id }}</td>
                            <td style="">{{ lang.lang_cms_locale }}</td>
                            <td style="">{{ lang.lang_cms_name }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        //this script cannot be separated to this file since all table configuration and initialization are done here
        // render table to DataTable plugin
        $(document).ready(function () {
            // including the data table script generated with the config provided.
            {{ dataTableScript|raw }}
        });
    </script>
{% endblock %}


